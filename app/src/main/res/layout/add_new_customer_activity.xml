<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/window_background"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main layout -->
    <LinearLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="1. Outlet Name"/>

                    <EditText
                        android:id="@+id/outlet_name"
                        android:layout_width="match_parent"
                        style="@style/TextBoxStyle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="1. Outlet Type"/>

                    <Spinner
                        style="@style/SpinnerStyle"
                        android:layout_width="200dp"
                        android:popupBackground="@color/primary_dark"
                        android:entries="@array/outlettypes" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="3. Outlet Size"/>

                    <Spinner
                        style="@style/SpinnerStyle"
                        android:layout_width="200dp"
                        android:popupBackground="@color/primary_dark"
                        android:entries="@array/outletsize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="4. Type of licence - is the licence certificate visible in the outlet?"/>

                    <Spinner
                        style="@style/SpinnerStyle"
                        android:layout_width="200dp"
                        android:popupBackground="@color/primary_dark"
                        android:entries="@array/SpinnerYesNo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="4a. If yes, what type of licence?"/>

                    <Spinner
                        style="@style/SpinnerStyle"
                        android:layout_width="200dp"
                        android:popupBackground="@color/primary_dark"
                        android:entries="@array/licencetype2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="5. Rural or Urban?"/>

                    <Spinner
                        style="@style/SpinnerStyle"
                        android:layout_width="200dp"
                        android:popupBackground="@color/primary_dark"
                        android:entries="@array/split" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="6. District"/>

                    <Spinner
                        style="@style/SpinnerStyle"
                        android:layout_width="200dp"
                        android:popupBackground="@color/primary_dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="7. Subcounty"/>

                    <Spinner
                        style="@style/SpinnerStyle"
                        android:layout_width="200dp"
                        android:popupBackground="@color/primary_dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="8. Trading Center"/>

                    <EditText
                        android:id="@+id/trading_center"
                        android:layout_width="match_parent"
                        style="@style/TextBoxStyle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="9. Please give directions to the outlet from a key landmark"/>

                    <EditText
                        android:id="@+id/directions"
                        android:layout_width="match_parent"
                        style="@style/TextBoxStyle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="10. Location GPS"/>

                    <EditText
                        android:id="@+id/location_gps"
                        android:layout_width="match_parent"
                        style="@style/TextBoxStyle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="11. How long has this outlet been open (months)?"/>

                    <EditText
                        android:id="@+id/months_open"
                        android:layout_width="match_parent"
                        style="@style/TextBoxStyle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="12. Number of employees who work at the outlet"/>

                    <EditText
                        android:id="@+id/number_of_employees"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        style="@style/TextBoxStyle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="13. How many diarrhea patients under 5 years do you see per week?"/>

                    <EditText
                        android:id="@+id/diarrhea_patients"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        style="@style/TextBoxStyle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="13. Where does the outlet source the majority of it's supplies?"/>

                    <EditText
                        android:id="@+id/main_supplier"
                        android:layout_width="match_parent"
                        style="@style/TextBoxStyle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="14. Key wholesaler name"/>

                    <EditText
                        android:id="@+id/key_wholesaler"
                        android:layout_width="match_parent"
                        style="@style/TextBoxStyle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="15. Key wholesaler contact"/>

                    <EditText
                        android:id="@+id/key_wholesaler_contact"
                        android:layout_width="match_parent"
                        style="@style/TextBoxStyle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LabelStyle"
                        android:text="16. How many times on average does the outlet stock up (per week)?"/>

                    <Spinner
                        style="@style/SpinnerStyle"
                        android:layout_width="200dp"
                        android:popupBackground="@color/primary_dark"
                        android:entries="@array/restock_frequency"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- Nav drawer -->
    <fragment
        android:id="@+id/fragment_drawer"
        android:name="org.chai.activities.DrawerFragment"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="left|start" />
</android.support.v4.widget.DrawerLayout>