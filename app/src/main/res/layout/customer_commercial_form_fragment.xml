<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/TitleTextStyle"
            android:text="Commercial"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LabelStyle"
                android:text="12. How long has this outlet been open (months)?"/>

            <EditText
                android:id="@+id/months_open"
                android:layout_width="match_parent"
                style="@style/TextBoxStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LabelStyle"
                android:text="13. Number of employees who work at the outlet"/>

            <EditText
                android:id="@+id/number_of_employees"
                android:layout_width="match_parent"
                android:inputType="number"
                style="@style/TextBoxStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:tag="required"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LabelStyle"
                android:text="14. How many diarrhea patients under 5 years do you see per week?"/>

            <EditText
                android:id="@+id/diarrhea_patients"
                android:layout_width="match_parent"
                android:inputType="number"
                style="@style/TextBoxStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:tag="required"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LabelStyle"
                android:text="15. Where does the outlet source the majority of it's supplies?"/>

            <EditText
                android:id="@+id/main_supplier"
                android:layout_width="match_parent"
                style="@style/TextBoxStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:tag="required"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LabelStyle"
                android:text="15. Key wholesaler name"/>

            <EditText
                android:id="@+id/key_wholesaler"
                android:layout_width="match_parent"
                style="@style/TextBoxStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LabelStyle"
                android:text="16. Key wholesaler contact"/>

            <EditText
                android:id="@+id/key_wholesaler_contact"
                android:layout_width="match_parent"
                style="@style/TextBoxStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LabelStyle"
                android:text="17. How many times on average does the outlet stock up (per week)?"/>

            <Spinner
                android:id="@+id/stock_frequency"
                style="@style/SpinnerStyle"
                android:layout_width="match_parent"
                android:popupBackground="@color/primary_dark"
                android:entries="@array/restock_frequency"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>