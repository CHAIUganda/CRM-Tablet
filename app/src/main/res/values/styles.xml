<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:spinnerItemStyle">@style/MooSpinnerItem</item>
    </style>

    <style name="MooSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/MooTextAppearanceSpinnerItem</item>
    </style>

    <style name="MooTextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/app_text_color</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="HeaderBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bar_grad</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff29549f</item>
        <item name="android:background">@null</item>
    </style>

    <style name="FooterBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#dedede</item>
    </style>

    <style name="myCheckBox">
        <item name="android:background">@drawable/btn_check_label_background</item>
        <item name="android:button">@drawable/my_checkbox</item>
    </style>
    <style name="myEditText">
        <item name="android:height">40dp</item>
        <item name="android:textColor">@color/list_main_text_color</item>
        <item name="android:background">@drawable/bordertextfield</item>
        <item name="android:textSize">@dimen/list_sub_text_size</item>
    </style>
    <style name="contact_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="LabelStyle">
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColorHint">@color/window_background_dark</item>
    </style>

    <style name="TipTextStyle">
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextBoxStyle">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/form_text_field</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">@dimen/text_field_padding</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">#7b98b8</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="LoginFormLabel">
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="SpinnerStyle">
        <item name="android:layout_width">@dimen/spinner_max_wth</item>
        <item name="android:background">@drawable/spinner_background_selector</item>
        <item name="android:layout_height">45dp</item>
    </style>
    <style name="TableHeaderStyle">
        <item name="android:background">@color/window_background_dark</item>
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>