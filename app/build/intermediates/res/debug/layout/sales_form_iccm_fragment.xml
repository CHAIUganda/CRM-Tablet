            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LabelStyle"
                android:text="2. Do you stock Zinc?"/>
            <Spinner
                android:id="@+id/spn_do_you_stock_zinc"
                style="@style/SpinnerStyle2"
                android:layout_width="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:entries="@array/yesnolist" />

            <LinearLayout
                android:id="@+id/ln_zinc_price_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/LabelStyle"
                    android:text="What is the lowest price you sell 1 tablet of Zinc?"/>

                <Spinner
                    android:id="@+id/spn_zinc_lowest_price"
                    style="@style/SpinnerStyle2"
                    android:layout_width="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
