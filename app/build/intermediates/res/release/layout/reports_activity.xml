<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/window_background"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main layout -->
    <LinearLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <TableLayout
            android:id="@+id/summary_report_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/TableHeaderStyle"
                    android:layout_weight="1"
                    android:text="Item"
                    android:background="@drawable/border_right_blue_header"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/TableHeaderStyle"
                    android:layout_weight="1"
                    android:text="This Week"
                    android:background="@drawable/border_right_blue_header"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/TableHeaderStyle"
                    android:layout_weight="1"
                    android:text="This Month"
                    android:background="@drawable/border_right_blue_header"/>

            </TableRow>
        </TableLayout>

    </LinearLayout>

    <!-- Nav drawer -->
    <fragment
        android:id="@+id/fragment_drawer"
        android:name="org.chai.activities.DrawerFragment"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="left|start" />
</android.support.v4.widget.DrawerLayout><!-- From: file:/C:/Users/Zed/AndroidStudioProjects/chai-crm-android1/app/src/main/res/layout/reports_activity.xml -->