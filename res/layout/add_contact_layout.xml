<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/background_light"
              android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact:"
        android:textColor="@color/list_main_text_color"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>
    <EditText
            android:id="@+id/customer_contact_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/list_main_text_color"
            android:textStyle="italic"
            android:background="@drawable/bordertextfield"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textColor="@color/list_main_text_color"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <Spinner
            android:id="@+id/customer_contact_gender"
            android:layout_height="wrap_content"
            android:prompt="@string/selectItem"
            android:layout_width="fill_parent"
            android:background="@drawable/btn_dropdown"
            android:entries="@array/gender"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graduation Year:"
            android:textColor="@color/list_main_text_color"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <EditText
            android:id="@+id/customer_contact_graduation_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/list_main_text_color"
            android:textStyle="italic"
            android:background="@drawable/bordertextfield"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:inputType="number"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Of Contact Person:"
            android:textColor="@color/list_main_text_color"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <EditText
            android:id="@+id/customer_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/list_main_text_color"
            android:textStyle="italic"
            android:background="@drawable/bordertextfield"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Network Or Association:"
            android:textColor="@color/list_main_text_color"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <EditText
            android:id="@+id/customer_contact_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/list_main_text_color"
            android:textStyle="italic"
            android:background="@drawable/bordertextfield"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qualification:"
            android:textColor="@color/list_main_text_color"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <EditText
            android:id="@+id/customer_contact_qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/list_main_text_color"
            android:textStyle="italic"
            android:background="@drawable/bordertextfield"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type Of Contact:"
            android:textColor="@color/list_main_text_color"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <Spinner
            android:id="@+id/customer_contact_type"
            android:layout_height="wrap_content"
            android:prompt="@string/selectItem"
            android:layout_width="fill_parent"
            android:background="@drawable/btn_dropdown"
            android:entries="@array/contact_type"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>


</LinearLayout>