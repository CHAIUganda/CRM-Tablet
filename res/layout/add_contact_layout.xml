<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/background_light"
              android:padding="10dp">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number:"
            android:textColor="@color/list_main_text_color"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <EditText
            android:id="@+id/customer_contact_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/list_main_text_color"
            android:textStyle="italic"
            android:background="@drawable/bordertextfield"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:inputType="phone"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact First Name:"
            android:textColor="@color/list_main_text_color"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <EditText
            android:id="@+id/customer_contact_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/list_main_text_color"
            android:textStyle="italic"
            android:background="@drawable/bordertextfield"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:singleLine="true"
            android:textCursorDrawable="@null"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Surname:"
            android:textColor="@color/list_main_text_color"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <EditText
            android:id="@+id/customer_contact_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/list_main_text_color"
            android:textStyle="italic"
            android:background="@drawable/bordertextfield"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:singleLine="true"
            android:textCursorDrawable="@null"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textColor="@color/list_main_text_color"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <Spinner
            android:id="@+id/customer_contact_gender"
            android:layout_height="wrap_content"
            android:prompt="@string/selectItem"
            android:layout_width="fill_parent"
            android:background="@drawable/btn_dropdown"
            android:entries="@array/gender"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Does this person belong to a network or association:"
            android:textColor="@color/list_main_text_color"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <Spinner
            android:id="@+id/customer_contact_network"
            android:layout_height="wrap_content"
            android:prompt="@string/selectItem"
            android:layout_width="fill_parent"
            android:background="@drawable/btn_dropdown"
            android:entries="@array/yesnolist"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of Role:"
            android:textColor="@color/list_main_text_color"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    <Spinner
            android:id="@+id/customer_contact_type"
            android:layout_height="wrap_content"
            android:prompt="@string/selectItem"
            android:layout_width="fill_parent"
            android:background="@drawable/btn_dropdown"
            android:entries="@array/type_of_role"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>

</LinearLayout>